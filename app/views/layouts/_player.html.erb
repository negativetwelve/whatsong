<div id="track-player">
    
  <div id="track-artwork">
    <div class="artwork-60">
      <%= image_tag @track.try(:images).try(:at, 1) || Track.first.images[1], class: "artwork-60", id: "now-playing" %>
    </div>
  </div>
  
  <div id="track-controls">
    <div id="controls-left">
      <a href="javascript:void(0)" onclick="play()" id="play-button">play</a>
      <a href="javascript:void(0)" onclick="stop()" id="stop-button">stop</a>
    </div>
    
    <div id="controls-middle">
      
    </div>
    
    <div id="controls-right">
      
    </div>
  </div>
  
</div>

